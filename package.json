{
  "name": "ai-usage-monitor",
  "displayName": "AI Usage Monitor",
  "description": "Monitor AI platform usage and balance across multiple providers",
  "version": "0.1.0",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "ai",
    "usage",
    "monitor",
    "balance",
    "openai",
    "deepseek",
    "zhipu"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-usage-monitor.refresh",
        "title": "Refresh Usage",
        "icon": "$(refresh)",
        "category": "AI Usage Monitor"
      },
      {
        "command": "ai-usage-monitor.openSettings",
        "title": "Open Settings",
        "icon": "$(gear)",
        "category": "AI Usage Monitor"
      },
      {
        "command": "ai-usage-monitor.addPlatform",
        "title": "Add Platform",
        "icon": "$(add)",
        "category": "AI Usage Monitor"
      },
      {
        "command": "ai-usage-monitor.configurePlatform",
        "title": "Configure Platform",
        "category": "AI Usage Monitor"
      },
      {
        "command": "ai-usage-monitor.togglePlatform",
        "title": "Toggle Platform",
        "category": "AI Usage Monitor"
      },
      {
        "command": "ai-usage-monitor.openPlatformConsole",
        "title": "Open Platform Console",
        "category": "AI Usage Monitor"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ai-usage-monitor",
          "title": "AI Usage Monitor",
          "icon": "$(pulse)"
        }
      ]
    },
    "views": {
      "ai-usage-monitor": [
        {
          "id": "ai-usage-monitor.usageView",
          "name": "Usage",
          "contextualTitle": "AI Usage Monitor"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "ai-usage-monitor.usageView",
        "contents": "尚未配置任何 AI 平台。\n[配置平台](command:ai-usage-monitor.addPlatform)\n了解更多关于 [支持的平台](https://github.com/your-repo/ai-usage-monitor#supported-platforms)。"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "ai-usage-monitor.refresh",
          "when": "view == ai-usage-monitor.usageView",
          "group": "navigation@1"
        },
        {
          "command": "ai-usage-monitor.openSettings",
          "when": "view == ai-usage-monitor.usageView",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "ai-usage-monitor.configurePlatform",
          "when": "view == ai-usage-monitor.usageView && viewItem == platform",
          "group": "inline"
        },
        {
          "command": "ai-usage-monitor.refresh",
          "when": "view == ai-usage-monitor.usageView && viewItem == platform",
          "group": "1_actions@1"
        },
        {
          "command": "ai-usage-monitor.openPlatformConsole",
          "when": "view == ai-usage-monitor.usageView && viewItem == platform",
          "group": "1_actions@2"
        },
        {
          "command": "ai-usage-monitor.togglePlatform",
          "when": "view == ai-usage-monitor.usageView && viewItem == platform",
          "group": "2_config@1"
        }
      ]
    },
    "configuration": {
      "title": "AI Usage Monitor",
      "properties": {
        "ai-usage-monitor.refreshInterval": {
          "type": "number",
          "default": 300,
          "minimum": 0,
          "description": "Auto refresh interval in seconds (0 to disable auto refresh)"
        },
        "ai-usage-monitor.statusBar.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Show usage in status bar"
        },
        "ai-usage-monitor.statusBar.platform": {
          "type": "string",
          "default": "",
          "description": "Platform to show in status bar (leave empty for first configured platform)"
        },
        "ai-usage-monitor.platforms.zhipu.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable Zhipu AI platform"
        },
        "ai-usage-monitor.platforms.zhipu.token": {
          "type": "string",
          "default": "",
          "description": "Zhipu AI authorization token"
        },
        "ai-usage-monitor.platforms.zhipu.environment": {
          "type": "string",
          "enum": ["production", "development"],
          "default": "production",
          "description": "Zhipu AI environment"
        },
        "ai-usage-monitor.platforms.deepseek.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable DeepSeek platform"
        },
        "ai-usage-monitor.platforms.deepseek.apiKey": {
          "type": "string",
          "default": "",
          "description": "DeepSeek API key"
        },
        "ai-usage-monitor.platforms.openai.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable OpenAI platform"
        },
        "ai-usage-monitor.platforms.openai.apiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API key"
        },
        "ai-usage-monitor.platforms.custom.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable New API platform (standard interface for many mirror sites)"
        },
        "ai-usage-monitor.platforms.custom.apiUrl": {
          "type": "string",
          "default": "",
          "description": "New API instance URL"
        },
        "ai-usage-monitor.platforms.custom.apiKey": {
          "type": "string",
          "default": "",
          "description": "New API key (Bearer token)"
        },
        "ai-usage-monitor.platforms.custom.userId": {
          "type": "string",
          "default": "",
          "description": "User ID (for New-Api-User header)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-repo/ai-usage-monitor"
  },
  "license": "MIT"
}
