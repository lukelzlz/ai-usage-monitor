{
  "name": "ai-usage-monitor",
  "displayName": "AI Usage Monitor",
  "description": "Monitor AI platform usage and balance across multiple providers and accounts",
  "version": "0.3.4",
  "publisher": "lukelzlz",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "ai",
    "usage",
    "monitor",
    "balance",
    "openai",
    "deepseek",
    "zhipu",
    "claude",
    "anthropic",
    "multi-account"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-usage-monitor.refresh",
        "title": "刷新",
        "icon": "$(refresh)",
        "category": "AI Usage Monitor"
      },
      {
        "command": "ai-usage-monitor.openSettings",
        "title": "打开设置",
        "icon": "$(gear)",
        "category": "AI Usage Monitor"
      },
      {
        "command": "ai-usage-monitor.addAccount",
        "title": "添加账号",
        "icon": "$(add)",
        "category": "AI Usage Monitor"
      },
      {
        "command": "ai-usage-monitor.editAccount",
        "title": "编辑账号",
        "category": "AI Usage Monitor"
      },
      {
        "command": "ai-usage-monitor.deleteAccount",
        "title": "删除账号",
        "category": "AI Usage Monitor"
      },
      {
        "command": "ai-usage-monitor.duplicateAccount",
        "title": "复制账号",
        "category": "AI Usage Monitor"
      },
      {
        "command": "ai-usage-monitor.toggleAccount",
        "title": "启用/禁用",
        "category": "AI Usage Monitor"
      },
      {
        "command": "ai-usage-monitor.openAccountConsole",
        "title": "打开控制台",
        "category": "AI Usage Monitor"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ai-usage-monitor",
          "title": "AI Usage Monitor",
          "icon": "$(pulse)"
        }
      ]
    },
    "views": {
      "ai-usage-monitor": [
        {
          "id": "ai-usage-monitor.usageView",
          "name": "账号",
          "contextualTitle": "AI Usage Monitor"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "ai-usage-monitor.usageView",
        "contents": "尚未配置任何 AI 账号。\n[添加账号](command:ai-usage-monitor.addAccount)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "ai-usage-monitor.refresh",
          "when": "view == ai-usage-monitor.usageView",
          "group": "navigation@1"
        },
        {
          "command": "ai-usage-monitor.openSettings",
          "when": "view == ai-usage-monitor.usageView",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "ai-usage-monitor.editAccount",
          "when": "view == ai-usage-monitor.usageView && viewItem == platform",
          "group": "inline"
        },
        {
          "command": "ai-usage-monitor.refresh",
          "when": "view == ai-usage-monitor.usageView && viewItem == platform",
          "group": "1_actions@1"
        },
        {
          "command": "ai-usage-monitor.openAccountConsole",
          "when": "view == ai-usage-monitor.usageView && viewItem == platform",
          "group": "1_actions@2"
        },
        {
          "command": "ai-usage-monitor.duplicateAccount",
          "when": "view == ai-usage-monitor.usageView && viewItem == platform",
          "group": "2_config@1"
        },
        {
          "command": "ai-usage-monitor.toggleAccount",
          "when": "view == ai-usage-monitor.usageView && viewItem == platform",
          "group": "2_config@2"
        },
        {
          "command": "ai-usage-monitor.deleteAccount",
          "when": "view == ai-usage-monitor.usageView && viewItem == platform",
          "group": "3_delete@1"
        }
      ]
    },
    "configuration": {
      "title": "AI Usage Monitor",
      "properties": {
        "ai-usage-monitor.refreshInterval": {
          "type": "number",
          "default": 300,
          "minimum": 0,
          "description": "自动刷新间隔（秒），0 表示禁用自动刷新"
        },
        "ai-usage-monitor.statusBar.showAccountName": {
          "type": "boolean",
          "default": false,
          "description": "在状态栏显示账号名称"
        },
        "ai-usage-monitor.accounts": {
          "type": "array",
          "default": [],
          "description": "账号配置列表",
          "items": {
            "type": "object",
            "required": ["id", "type", "name", "enabled", "config"],
            "properties": {
              "id": {
                "type": "string",
                "description": "账号唯一标识"
              },
              "type": {
                "type": "string",
                "description": "平台类型：zhipu, deepseek, openai, claude, custom",
                "enum": ["zhipu", "deepseek", "openai", "claude", "custom"]
              },
              "name": {
                "type": "string",
                "description": "账号显示名称"
              },
              "enabled": {
                "type": "boolean",
                "description": "是否启用"
              },
              "config": {
                "type": "object",
                "description": "平台特定配置"
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^20.19.30",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lukelzlz/ai-usage-monitor"
  },
  "license": "MIT"
}
